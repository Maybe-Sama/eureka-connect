{
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install --unsafe-perm --ignore-scripts=false --no-frozen-lockfile",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "PNPM_APPROVED_BUILDS": "sqlite3,better-sqlite3,core-js,unrs-resolver"
    }
  }
}